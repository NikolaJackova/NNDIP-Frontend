<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:NNDIP.Maui.Converters"
             x:Class="NNDIP.Maui.Views.Dashboard.DashboardPage"
             Title="Dashboard">
    <StackLayout>
        
        <VerticalStackLayout Padding="10">
            <Label FontSize="Title" Text="Device status"/>
            <Frame Padding="10">
                <Grid RowDefinitions="*, *, *" ColumnDefinitions="*, 3*, 2*">
                    <Image HeightRequest="40" WidthRequest="40">
                        <Image.Source>
                            <Binding Path="AddressStateResult.IsACUnitOn">
                                <Binding.Converter>
                                    <local:BoolToObjectConverter x:TypeArguments="x:String"
                                                             TrueObject="on_button.png"
                                                             FalseObject="off_button.png" />
                                </Binding.Converter>
                            </Binding>
                        </Image.Source>
                    </Image>
                    <Label Padding="8" Grid.Column="1" Text="Air Condition"/>
                    <Label Grid.Column="2" Text="Ikonky"/>
                </Grid>
            </Frame>
            <Frame Padding="10">
                <Grid RowDefinitions="*, *, *" ColumnDefinitions="*, 3*, 2*">
                    <Image Source="off_button.png" HeightRequest="40" WidthRequest="40" />
                    <Label Padding="8" Grid.Column="1" Text="Air Condition"/>
                    <Label Grid.Column="2" Text="{Binding AddressStateResult.IsRecuperationOn}"/>
                </Grid>
            </Frame>
            <Frame Padding="10">
                <Grid RowDefinitions="*, *, *" ColumnDefinitions="*, 3*, 2*">
                    <Image HeightRequest="40" WidthRequest="40">
                        <Image.Source>
                            <Binding Path="AddressStateResult.IsRecuperationOn">
                                <Binding.Converter>
                                    <local:BoolToObjectConverter x:TypeArguments="x:String"
                                                             TrueObject="on_button.png"
                                                             FalseObject="off_button.png" />
                                </Binding.Converter>
                            </Binding>
                        </Image.Source>
                    </Image>
                    <Label Padding="8" Grid.Column="1" Text="Recuperation"/>
                    <Label Grid.Column="2" Text="Ikonky"/>
                </Grid>
            </Frame>
            <Button Text="Load" WidthRequest="100" CornerRadius="20" HorizontalOptions="Center" Command="{Binding LoadCommand}" />
        </VerticalStackLayout>
        
    </StackLayout>
</ContentPage>